<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 文件上传最大值，默认为2M -->
	<constant name="struts.multipart.maxSize" value="10485760"></constant>
	<!-- 启用动态方法的调用 -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    
	<package name="filemanager" extends="struts-default">
		<action name="file" class="com.qhit.lh.g4.sea.t7.action.FileAction">
			<interceptor-ref name="fileUpload">  
                <param name="allowedTypes">image/jpeg,image/gif</param>  
                <param name="maximumSize">1024*1024</param>  
            </interceptor-ref>  
            <interceptor-ref name="defaultStack"></interceptor-ref>  
			<result name="success">/jsp/info.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		
		
		<action name="download" class="com.sea.test.action.UploadAction" method="download">
			<result type="stream" name="down">  
                <param name="contentType">image/jpeg</param>  
                <param name="contentDisposition">filename="${downloadfileName}"</param>  
                <param name="bufferSize">4096</param>  
            </result> 
		</action>
	</package>
</struts>