<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.qhit.lh.g4.yjh.t2.bean.Emp">
	<!-- 主键映射 -->
		<id name="eid" column="eid" type="integer">
			<!-- 自增方式 -->
			<generator class="native"></generator>
		</id>
		<!-- 普通成员映射 -->
		<property name="empName" column="empName" type="string"></property>
		<property name="empSex" column="empSex" type="string"></property>
		<property name="brithday" column="brithday" type="string"></property>
		<property name="deptId" column="deptId" type="integer"></property>
		<!-- 一对一关系的映射-->
		<one-to-one name="userInfo" class="com.qhit.lh.g4.yjh.t2.bean.UserInfo" cascade="all"></one-to-one>
	</class>

</hibernate-mapping>
