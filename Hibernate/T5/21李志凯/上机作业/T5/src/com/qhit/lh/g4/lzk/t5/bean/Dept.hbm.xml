<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.qhit.lh.g4.lzk.t4.bean.dept" table="t_dept">
		<id name="deptId" column="deptId" type="integer">
			<!-- 自增方式 -->
			<generator class="native"></generator>
		</id>
		<property name="deptName" column="deptName" type="string"></property>
		<property name="empSex" column="empSex" type="string"></property>
		<property name="birthday" column="birthday" type="string"></property>
		<property name="deptId" column="deptId" type="integer"></property>
		<!-- 一对一的关系映射 -->
		<one-to-one name="userInfo" class="com.qhit.lh.g4.lzk.t4.bean.userInfo" cascade="all"></one-to-one>
		
		<!-- 1-n关联 -->
		<set name="emps" lazy="false" cascade="save-update" inverse="false">
			<key column="deptId"></key>
			<one-to-many class="com.qhit.lh.g4.lzk.t4.bean.Emp"/>
		</set>
		
	</class>	
</hibernate-mapping>
